{
	"version": "1.0.0",
	"title": "Discovery function: Change memory size",
	"description": "Under changed function memory size conditions, the discovery function should still function correctly or degrade gracefully.",
	"tags": [],
	"configuration": {
		"aws_region": "eu-central-1"
	},
	"steady-state-hypothesis": {
		"title": "Steady state hypothesis for discovery function",
		"probes": [
			{
				"type": "probe",
				"name": "probe-function-alarm",
				"provider": {
					"type": "python",
					"module": "chaosaws.cloudwatch.probes",
					"func": "get_alarm_state_value",
					"arguments": {
						"alarm_name": "discovery-function-health-production"
					}
				},
				"tolerance": "OK"
			},
			{
				"type": "probe",
				"name": "probe-metrics-function-invocations",
				"provider": {
					"type": "python",
					"module": "chaosaws.cloudwatch.probes",
					"func": "get_metric_statistics",
					"arguments": {
						"namespace": "AWS/Lambda",
						"metric_name": "Invocations",
						"dimension_name": "FunctionName",
						"dimension_value": "rumor-production-discovery",
						"duration": 3600,
						"offset": 0,
						"statistic": "Sum",
						"extended_statistic": null,
						"unit": "Count"
					}
				},
				"tolerance": [0.0, 100.0]
			},
			{
				"type": "probe",
				"name": "probe-metrics-sqs-queue-length",
				"provider": {
					"type": "python",
					"module": "chaosaws.cloudwatch.probes",
					"func": "get_metric_statistics",
					"arguments": {
						"namespace": "AWS/SQS",
						"metric_name": "ApproximateNumberOfMessagesVisible",
						"dimension_name": "QueueName",
						"dimension_value": "rumor-production-collection-queue",
						"duration": 300,
						"offset": 0,
						"statistic": "Sum",
						"extended_statistic": null,
						"unit": "Count"
					}
				},
				"tolerance": [0.0, 100.0]
			},
			{
				"type": "probe",
				"name": "probe-function-memory-size",
				"provider": {
					"type": "python",
					"module": "chaosaws.awslambda.probes",
					"func": "get_function_memory_size",
					"arguments": {
						"function_name": "rumor-production-discovery",
						"qualifier": null
					}
				},
				"tolerance": 256
			}
		]
	},
	"method": [
		{
			"type": "action",
			"name": "action-change-function-memory-size",
			"provider": {
				"type": "python",
				"module": "chaosaws.awslambda.actions",
				"func": "put_function_memory_size",
				"arguments": {
					"function_name": "rumor-production-discovery",
					"memory_size": 128
				}
			},
			"pauses": {
				"after": 120
			}
		},
		{
			"ref": "probe-metrics-function-invocations"
		},
		{
			"ref": "probe-metrics-sqs-queue-length"
		},
		{
			"ref": "probe-function-memory-size"
		},
		{
			"type": "action",
			"name": "action-restore-function-memory-size",
			"provider": {
				"type": "python",
				"module": "chaosaws.awslambda.actions",
				"func": "put_function_memory_size",
				"arguments": {
					"function_name": "rumor-production-discovery",
					"memory_size": 256
				}
			}
		}
	],
	"rollbacks": [
		{
			"ref": "action-restore-function-memory-size"
		}
	]
}
